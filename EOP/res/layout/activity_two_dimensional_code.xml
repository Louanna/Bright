<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/scan_me_bg"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/common_top_img_left"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentTop="true"
        android:src="@drawable/top_back"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/common_top_img_right"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/icon_share_more"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/two_dimensional_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/scan_me_sun" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/two_dimensional_sun"
        android:layout_marginBottom="@dimen/dp_5"
        android:src="@drawable/scan_me_cloud" />

    <ImageView
        android:id="@+id/scan_codemiddle_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/scan_codemiddle_bg" />

    <TextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/scan_codemiddle_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_26"
        android:shadowColor="@color/grey"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="0.2"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_26"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/two_dimensional"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/scan_codemiddle_bg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_13" />

</RelativeLayout>