<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/chat_bg_color"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_15"
                android:background="@color/white">

                <com.movit.platform.framework.widget.CircleImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="@dimen/dp_44"
                    android:layout_height="@dimen/dp_44"
                    android:src="@drawable/avatar_male"/>

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/user_detail_content_color"
                    android:textSize="@dimen/sp_16"
                    android:text="456"
                    android:layout_toRightOf="@+id/user_avatar"
                    android:layout_toEndOf="@+id/user_avatar"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/tv_user_dep"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/user_detail_title_color"
                    android:textSize="@dimen/sp_16"
                    android:drawablePadding="@dimen/dp_2"
                    android:drawableLeft="@drawable/bumen"
                    android:layout_toRightOf="@+id/user_avatar"
                    android:layout_toEndOf="@+id/user_avatar"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_20"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:ems="3"
                        android:text="@string/user_city"
                        android:textColor="@color/user_detail_title_color"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/user_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:textColor="@color/user_detail_content_color"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>



                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/user_detail_title_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:ems="3"
                        android:text="@string/user_jobtitle_2"
                        android:textColor="@color/user_detail_title_color"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/user_jobtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:textColor="@color/user_detail_content_color"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/user_detail_title_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:ems="3"
                        android:text="@string/user_jobtitle_3"
                        android:textColor="@color/user_detail_title_color"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/user_objname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:textColor="@color/user_detail_content_color"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:ems="3"
                        android:text="@string/user_phone"
                        android:textColor="@color/user_detail_title_color"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/user_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:drawableRight="@drawable/go"
                        android:text=""
                        android:textColor="@color/user_detail_content_blue_color"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/user_detail_title_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:ems="3"
                        android:text="@string/user_office_phone"
                        android:textColor="@color/user_detail_title_color"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/user_office_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:drawableRight="@drawable/go"
                        android:gravity="center_vertical"
                        android:text=""
                        android:textColor="@color/user_detail_content_blue_color"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/user_detail_title_line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:ems="3"
                        android:text="@string/user_mail"
                        android:textColor="@color/user_detail_title_color"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:id="@+id/user_mail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:text=""
                        android:textColor="@color/user_detail_content_blue_color"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12">


                <TextView
                    android:id="@+id/user_clear_cache"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center"
                    android:text="@string/user_setting_help"
                    android:textColor="@color/user_detail_title_color"
                    android:textSize="@dimen/sp_18" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_clear_mdm_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="解除绑定"
                        android:textColor="@color/user_detail_title_color"
                        android:textSize="@dimen/sp_16" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/user_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:gravity="center"
                android:text="@string/logout"
                android:textColor="@color/red"
                android:textSize="@dimen/sp_18" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>