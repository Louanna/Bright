<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/magazine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="新城人xxxxx"
        android:textColor="@color/list_text_title"
        android:textSize="@dimen/sp_14" />

    <ImageView
        android:id="@+id/magazine_image"
        android:layout_width="@dimen/dp_180"
        android:layout_height="@dimen/dp_250"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:scaleType="centerCrop"
        android:src="@drawable/zone_pic_default"/>

    <TextView
        android:id="@+id/magazine_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="新城人xxxxx"
        android:textColor="@color/list_text_title"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/magazine_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="xxxxxxxxx"
        android:textColor="@color/list_text_subTitle_for_contact"
        android:textSize="@dimen/sp_12" />

</LinearLayout>