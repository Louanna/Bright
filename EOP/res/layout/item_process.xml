<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/dp_5"
    android:layout_marginRight="@dimen/dp_5"
    android:background="@color/process_bg_color">

    <View
        android:layout_width="1px"
        android:layout_height="@dimen/dp_90"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_18"
        android:background="@color/grey"/>
    <ImageView
        android:id="@+id/iv_circle"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:src="@drawable/process_point"
        android:contentDescription="@null"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/iv_circle"
        android:layout_toEndOf="@+id/iv_circle"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/process_kuang"
        android:baselineAligned="false">
        <com.movit.platform.framework.widget.CircleImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@drawable/avatar_male"/>

        <TextView
            android:id="@+id/tv_process_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_13"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toRightOf="@+id/user_avatar"
            android:layout_toEndOf="@+id/user_avatar"
            android:textSize="@dimen/sp_16"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/news_title_color"
            android:text="参加2016机构销售会议参加2016机构销售会议"/>

        <TextView
            android:id="@+id/tv_process_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/sp_10"
            android:layout_marginLeft="@dimen/sp_10"
            android:layout_marginRight="@dimen/sp_10"
            android:layout_toRightOf="@+id/user_avatar"
            android:layout_toEndOf="@+id/user_avatar"
            android:layout_below="@+id/tv_process_title"
            android:drawableLeft="@drawable/process_clock"
            android:drawableStart="@drawable/process_clock"
            android:drawablePadding="@dimen/dp_5"
            android:textColor="@color/news_s_title_color"
            android:text="@string/process_time"/>

    </RelativeLayout>

</RelativeLayout>